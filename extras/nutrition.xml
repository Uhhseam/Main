<?xml version = "1.0"?>

<!-- Exercise 15.9 solution -->
<xsl:stylesheet version = "1.0"
  xmlns:xsl = "http://www.w3.org/1999/XSL/Transform">

   <xsl:output method = "html" omit-xml-declaration = "no"
     doctype-system =
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"
     doctype-public = "-//W3C//DTD XHTML 1.0 Strict//EN"/>

    <xsl:template match = "/">
      <html xmlns = "http://www.w3.org/1999/xhtml">
       <head>
         <title><xsl:value-of select = "product/@name"/>
         </title>
       </head>
       <body>
        <h1><xsl:value-of select = "product/@name"/></h1>
        <h2><xsl:value-of select = "product/servingsize"/></h2>
        <table border = "1" style = "background-color: lemonchiffon">
          <thead>
            <tr>
              <th>calories</th>
              <th>fat</th>
              <th>cholesterol</th>
              <th>sodium</th>
              <th>carbohydrates</th>
              <th>protein</th>
            </tr>
          </thead>

          <xsl:for-each select = "product">
            <!-- First row -->
            <tr>
              <td>total: 250
                <xsl:value-of select = "calories/total"/></td>
                <td>total: 11 grams <xsl:value-of select= "fat/total"/></td>
                <td>total: 5 miligrams<xsl:value-of select = "cholesterol"/></td>
                <td>total: 210 miligrams<xsl:value-of select = "sodium"/></td>
                <td>total: 36 grams<xsl:value-of
                  select = "carbohydrates/total"/></td>
                <td>total: 5 grams<xsl:value-of select = "protein"/></td>
            </tr>
          </xsl:for-each>

          <xsl:for-each select = "product">
            <!-- Second row -->
            <tr>
              <td>fat: 100
                <xsl:value-of select = "calories/fat"/></td>
              <td>saturated: 2 grams
                <xsl:value-of select = "fat/saturated"/></td>
              <td></td>
              <td></td>
              <td>fiber: 2 grams<xsl:value-of
                select = "carbohydrates/fiber"/></td>
              <td></td>
            </tr>
          </xsl:for-each>

          <xsl:for-each select = "product">
            <!--third row-->
            <tr>
             <td></td>
             <td></td>
             <td></td>
             <td></td>
             <td>sugars: 15 grams<xsl:value-of
               select = "carbohydrates/sugars"/></td>
             <td></td>
            </tr>
          </xsl:for-each>
         </table>
        </body>
       </html>
      </xsl:template>
     </xsl:stylesheet>

